# Server Configuration
PORT=8081
NODE_ENV=development
SEED_DB=true

# Database - Update with your MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/movie-watch-party

# JWT Security - IMPORTANT: Generate a secure secret for production!
# You can generate a secure secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
